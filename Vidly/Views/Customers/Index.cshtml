@model IEnumerable<Vidly.Models.Customer>

@{
    ViewBag.Title = "Index";
}

<h2>Customers</h2>
<hr />

    @*@Html.ActionLink("Create New", "New")*@

    <a type="button" class="btn btn-primary btn-sm" href="@Url.Action("Create")">
        <span class="glyphicon glyphicon-plus"></span>
        <span>Create New</span>
    </a>

<br />
<br />

@if (Model.Count() > 0)
{

    <table class="table table-condensed table-striped">
        <tr>
            <th>Customer</th>
            <th>Discount Rate</th>
            <th>SignupFee</th>
            <th>Membership Type</th>
            <th></th>
        </tr>

        @foreach (var customer in Model)
        {
            <tr>
                <td>
                    @*@Html.DisplayFor(modelItem => item.Name)*@
                    @Html.ActionLink(customer.Name, "Details", new { id = customer.Id })

                </td>
                <td>
                    @customer.MembershipType.DiscountRate%
                </td>
                <td>
                    @customer.MembershipType.SignUpFee
                </td>
                <td>
                    @customer.MembershipType.Name
                </td>

                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { id = customer.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = customer.Id })*@

                    <a type="button" class="btn btn-success btn-sm" href="@Url.Action("Edit",new {Id=@customer.Id})">
                        <span class="glyphicon glyphicon-pencil"></span>
                        <span>Edit</span>
                    </a>

                    
                    <a type="button" class="btn btn-danger btn-sm" href="@Url.Action("Delete",new {Id=@customer.Id})">
                        <span class="glyphicon glyphicon-trash"></span>
                        <span>Delete</span>
                    </a>


                </td>
            </tr>
        }

    </table>
}
