@model Vidly.ViewModels.MovieViewModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Movie</h2>

@using (Html.BeginForm("Edit", "Movies"))
{
    @Html.AntiForgeryToken()

<div class="form-group">
    @Html.LabelFor(m => m.Movie.Name)
    @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.Movie.Name, "", new { @class = "text-danger" })
</div>

    <div class="form-group">
        @Html.LabelFor(m => m.Movie.ReleaseDate)
        @Html.TextBoxFor(m => m.Movie.ReleaseDate, "{0:MMM-dd-yyyy}", new { @class = "form-control datepicker" })
        @Html.ValidationMessageFor(model => model.Movie.ReleaseDate, "", new { @class = "text-danger" })
        @*<input type="date" id="ReleaseDate" name="ReleaseDate">*@
        @*{0:d MMM yyyy}*@
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Movie.GenreId)
        @Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(Model.Genres, "id", "name"), "Select Genre", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Movie.GenreId, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Movie.StockCount)
        @Html.TextBoxFor(m => m.Movie.StockCount, new { @class = "form-control" })

    </div>

    @Html.HiddenFor(m => m.Movie.Id)

    <a type="button" class="btn btn-primary btn-sm" href="@Url.Action("Index")">
        <span class="glyphicon glyphicon-list"></span>
        <span>Back To List</span>
    </a>

    <button type="submit" class="btn btn-sm btn-primary">Save</button>

}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}