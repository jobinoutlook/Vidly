@model Vidly.ViewModels.MovieViewModel
@{
    ViewBag.Title = "Delete";
}

<h2>Delete Movie</h2>

@using (Html.BeginForm("Delete", "Movies"))
{
    @Html.AntiForgeryToken()
    
<fieldset disabled>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Name)
        @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.ReleaseDate)
        @Html.TextBoxFor(m => m.Movie.ReleaseDate, "{0:dd-MM-yyyy}", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.GenreId)
        @Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(Model.Genres, "id", "name"), "Select Genre", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.StockCount)
        @Html.TextBoxFor(m => m.Movie.StockCount, new { @class = "form-control" })
    </div>
</fieldset>
    @Html.HiddenFor(m=>m.Movie.Id)

    <a type="button" class="btn btn-success btn-sm" href="@Url.Action("Index")">
        <span class="glyphicon glyphicon-list" ></span>
        <span>Back to List</span>
    </a>

    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
}


